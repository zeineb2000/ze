{% extends './backend/backbody.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    {% if reduction %}
        <div class="card">
        <div class="card-header">
            <h3 class="card-title">LISTE DES reductions</h3>
        </div>
        <div class="card-body p-0">
            <table id="chauffeur" class="table table-striped">
                <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>pourcentage</th>
                    <th>calcul</th>


                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for r in reduction %}
                    <tr>
                        <td>{{ r.id }}</td>
                        <td>{{ r.pourcentage }}</td>
                        <td>{{ r.calcul }}</td>

                         {#<td>
                            <a class="btn btn-block btn-info" href="{{ path('detail_reduction',{'id':r.id}) }}" > detail</a>

                        </td> #}
                        <td>
                            <a class="btn btn-block btn-success" href="{{ path('edit_reduction',{'id':r.id}) }}" > modifier</a>
                        </td>
                        <td>
                            <a class="btn btn-block btn-danger" href="{{ path('delete_reduction',{'id':r.id}) }} " >supprimer </a>
                        </td>

                        </td>
                    </tr>

                {% endfor %}
                </tbody>

            </table>
        </div>

    {% else %}
        <div class="container">
            <table>
                <thead>
                <th>aucune reduction</th>
                <th><a class="example_b" href="{{ path('add_reduction') }}">Ajouter une reduction</a></th>
                </thead>
            </table>

        </div>

    {% endif %}
{% endblock content %}